<Window x:Class="Lab5.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="Фильтр" Height="450" Width="800">
    <Grid>
        <Label Content="Выбор фильтра" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="sel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="10,60,0,0" Width="500" SelectedIndex="0">
            <TextBlock>Все</TextBlock>
            <TextBlock>По названию</TextBlock>
            <TextBlock>По фрагменту названия</TextBlock>
            <TextBlock>По имени автора</TextBlock>
            <TextBlock>По ключевым словам</TextBlock>
        </ComboBox>
        <TextBox x:Name="str" HorizontalAlignment="Center" Height="31" Margin="0,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="187,367,0,0" VerticalAlignment="Top" Height="31" Width="177" Click="ButtonOK_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="441,367,0,0" VerticalAlignment="Top" Height="31" Width="179" Click="ButtonCancel_Click"/>
    </Grid>
</Window>
